<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/recap_paddin_top_trd"
    android:paddingTop="@dimen/recap_paddin_top_trd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/recap_width_img"
                        android:layout_height="@dimen/recap_width_img"
                        android:scaleType="fitXY"
                        android:src="@drawable/recap_localisation" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/recap_paddin_top_prm"
                    android:layout_weight="0.75"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_adresse_livraison"
                        android:textColor="@color/gris_fonce_primary" />

                    <TextView
                        android:id="@+id/id_entreprise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/recap_paddin_top_scd"
                        android:text="@string/text_entreprise_name"
                        android:textColor="@color/gris_fonce"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_adresse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/text_adresse"
                        android:textColor="@color/gris" />

                    <!--<TextView
                        android:id="@+id/id_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/text_place_recap"
                        android:textColor="@color/gris" />-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/recap_paddin_top_prm"
                        android:background="@color/gris_fonce" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/id_carburant_image"
                        android:layout_width="@dimen/recap_width_img"
                        android:layout_height="@dimen/recap_width_img"
                        android:scaleType="fitXY"
                        android:src="@drawable/recap_g98" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/recap_paddin_top_prm"
                    android:layout_weight="0.75"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_type_essence"
                        android:textColor="@color/gris_fonce_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/recap_paddin_top_scd"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_carburant"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/text_gazole_98"
                            android:textColor="@color/gris" />

                        <TextView
                            android:id="@+id/id_prix_litre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="end"
                            android:text=""
                            android:textColor="@color/gris_claire"
                            android:textSize="9sp" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/recap_paddin_top_prm"
                        android:background="@color/gris_fonce" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/recap_width_img"
                        android:layout_height="@dimen/recap_width_img"
                        android:scaleType="fitXY"
                        android:src="@drawable/recap_card" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/recap_paddin_top_prm"
                    android:layout_weight="0.75"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carte"
                        android:textColor="@color/gris_fonce_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/recap_paddin_top_scd"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="15dp"
                            android:src="@drawable/visa" />

                        <TextView
                            android:id="@+id/id_code_carte"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="15dp"
                            android:text="@string/button_add_carte"
                            android:textColor="@color/text_carte_selector"
                            android:visibility="gone"/>

                        <Spinner
                            android:id="@+id/spn_card"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:entries="@array/array_parking"
                            android:gravity="left|start"
                            android:paddingLeft="5dp"
                            android:spinnerMode="dialog"
                            android:textAlignment="textStart"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/id_changer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="end"
                            android:text="@string/text_changer"
                            android:textColor="@color/gris_claire"
                            android:textSize="11sp"
                            android:visibility="gone"/>

                    </LinearLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/recap_paddin_top_prm"
                        android:background="@color/gris_fonce" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/recap_paddin_top_prm"
                    android:layout_weight="0.75"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_total"
                        android:textColor="@color/gris_fonce_primary" />

                    <TextView
                        android:id="@+id/id_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/recap_paddin_top_prm"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_total_value"
                        android:textColor="@color/gris" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>