<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <ScrollView
        android:id="@+id/car_list_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/header_height"
        android:background="@color/white">

        <LinearLayout

            android:id="@+id/car_list_contener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/selector_list_car">

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/car_list_empty_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/header_height"
        android:background="@color/white"
        android:visibility="visible">

        <ImageView
            android:id="@+id/car_list_img_empty"
            android:layout_width="200dp"
            android:layout_height="78dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="131dp"
            android:background="@drawable/car_icon" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_list_img_empty"
            android:layout_centerHorizontal="true"
            android:text="@string/text_no_car_list"
            android:textColor="@color/gris"
            android:textSize="@dimen/size_small"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>


    <Button
        android:id="@+id/car_list_add_bas"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_list_car"
        android:text="@string/button_add_car"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>
