<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <!--<ImageView

        android:layout_width="170dp"
        android:layout_height="171dp"
        app:srcCompat="@drawable/confirmation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.eralp.circleprogressview.CircleProgressView
                android:id="@+id/circle_progress_view"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cpv_background_circle_color="@color/fond_circle_progress_primary"
                app:cpv_background_circle_width="10dp"
                app:cpv_circle_color="@color/fond_circle_progress_second"
                app:cpv_circle_width="10dp"
                app:cpv_text_color="@color/gris_fonce"
                app:cpv_text_size="40"
                app:cpv_text_suffix="%"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/img_confirmation"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_alignRight="@id/circle_progress_view"
                android:src="@drawable/confirmation"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_jerricane"
                android:layout_width="130dp"
                android:layout_height="175dp"
                android:src="@drawable/jerricane"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_complete"
                android:layout_width="170dp"
                android:layout_height="175dp"
                android:src="@drawable/confirmation"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_info"
            style="@style/textview_custom_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/text_commande_traitement"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="top|center">

            <LinearLayout
                android:id="@+id/container_img_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_step1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/step_color" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="1dp"
                    android:background="@color/gris" />

                <ImageView
                    android:id="@+id/img_step2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/step_border_only" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="1dp"
                    android:background="@color/gris" />

                <ImageView
                    android:id="@+id/img_step3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/step_border_only" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="1dp"
                    android:background="@color/gris" />

                <ImageView
                    android:id="@+id/img_step4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/step_border_only" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="1dp"
                    android:background="@color/gris" />

                <ImageView
                    android:id="@+id/img_step5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/step_border_only" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
